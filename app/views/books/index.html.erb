<h1>Books</h1>
  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
    <% @books.each do |book| %>
      <tr>
        <th><%= book.title %></th>
        <th><%= book.body %></th>
        <th><%= link_to "Show", book_path(book.id) %></th>
        <th><%= link_to "Edit", edit_book_path(book.id) %></th>
        <th><%= link_to "Destroy", book_path(book.id), method: :delete %></th>
      </tr>
    <% end %>
  </table>

<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>
  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit "Create Book" %>
  </div>
<% end %>